@model List<Product>
@{
    for (int i = 0; i < Model.Count; i++)
    {
        <div class="card m-3" style="width: 16rem;">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"> Product Id: @Model[i].Id</li>
                <li class="list-group-item">Name: @Model[i].Name</li>
                <li class="list-group-item">Category: @Model[i].Category</li>
                <li class="list-group-item">Price: @Model[i].Price</li>
                <li class="list-group-item">Count: @Model[i].Count</li>
                <li class="list-group-item">Description: @Model[i].Description</li>
            </ul>
        </div>
    }
}